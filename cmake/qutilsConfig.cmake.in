@PACKAGE_INIT@

include(CMakeFindDependencyMacro)
find_dependency(fmt REQUIRED)
find_dependency(Eigen3 3.4 REQUIRED NO_MODULE)

set(MKL_INTERFACE_FULL "intel_lp64")
find_package(MKL CONFIG QUIET)

if(MKL_FOUND)
    message(STATUS "MKL found, using MKL for linear algebra")
else()
    message(STATUS "MKL not found, falling back to OpenBLAS")
    find_package(OpenBLAS CONFIG REQUIRED)
endif()

set(qutils_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/include")
set(qutils_LIBRARY_DIR "@CMAKE_INSTALL_PREFIX@/lib")

include("${CMAKE_CURRENT_LIST_DIR}/qutilsTargets.cmake")

add_library(qutils::qutils INTERFACE IMPORTED)
target_link_libraries(qutils::qutils INTERFACE
    qutils::clifford_state
    qutils::quantum_circuit
    qutils::quantum_state
    qutils::free_fermion
)
target_include_directories(qutils::qutils INTERFACE
    "${qutils_INCLUDE_DIR}"
    "${qutils_INCLUDE_DIR}/qutils"
)
